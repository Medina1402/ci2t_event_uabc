*
  margin 0
  padding 0
  border 0
  text-decoration none
  transition 200ms
  font-family Roboto, SansSerif

.bigText
  font-size 2.5em
  font-weight bold
  text-transform uppercase
  margin-bottom 1em

.accent
  color var(--color-accent)
  font-weight bold

.highlight
  color white
  background-color var(--color-accent)
  border 2px solid var(--color-accent)
  padding 0 4px
  border-radius 0.5em

.download_poster
  display block
  margin 7em auto auto auto
  width 15em
  text-align center
  padding 1em
  font-size 1.2em
  font-weight bold
  background-color transparent
  border 0.1em solid var(--color-accent)
  color var(--color-accent)
  text-transform capitalize
  &:hover
    background-color var(--color-accent)
    color white