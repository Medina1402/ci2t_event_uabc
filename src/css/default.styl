*
  margin 0
  padding 0
  border 0
  text-decoration none
  transition 200ms
  font-family Roboto, SansSerif

.bigText
  font-size 2.5em
  font-weight bold
  text-transform uppercase
  margin-bottom 1em

.accent
  color var(--color-accent)
  font-weight bold

.highlight
  color white
  background-color var(--color-accent)
  border 2px solid var(--color-accent)
  padding 0 4px
  border-radius 0.5em
