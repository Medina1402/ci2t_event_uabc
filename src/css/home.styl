#info
  padding-top var(--size-header)
  height calc(100vh - var(--size-header))
  background-color black
  color white

  display grid
  grid-gap 1em
  grid-template-columns 1em 1fr 1fr 1em
  flex-direction column
  align-items center
  *
    font-family BebasNeue

  h2
    font-size 1.5em
    margin 0.25em 0

  .container
    transform translateY(-25%)
    grid-column 3
    width auto
    margin 0
    padding 0

  .btn-option
    display flex
    height 3em
    align-items center

    .btn
      letter-spacing 0.1em
      font-weight bold
      padding 0.75em
      border 1px solid red
      margin-right 1em

  h1
    line-height 0.85em
    font-size 3.5em

.container
  padding 10em 15%
  p
    font-size 1.5em
    text-align justify

.link
  display block
  font-size 1.5em
  margin-top 2em

.conference
  display grid
  grid-gap 1em
  grid-template-columns 4em 1fr
  margin 4em 0 4em 0

  .nth
    display flex
    margin auto
    align-items center
    height 3em
    width 3em
    font-family BebasNeue
    font-weight bold
    justify-content center
    background-color var(--color-accent)

  .title
    display flex
    align-items center
    font-weight bold

  .description
    grid-column 2 / 3

  .more
    grid-column 2 / 3


.btn-primary
  color white
  border 1px solid white !important
  background-color transparent
  &:hover
    color black
    border 1px solid white !important
    background-color white

.btn-secondary
  color black
  border 1px solid white !important
  background-color white
  &:hover
    color white
    border 1px solid white !important
    background-color transparent


.mouse-down
  position: absolute;
  bottom: 15px;
  left: calc((100% - 20px)/2 - 1px);
  width: 20px;
  height: 35px;
  border: 2px solid white;
  border-radius: 5em;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 0;
  cursor: pointer;

  &:after{
    content: "";
    position: absolute;
    width: 5px;
    height: 5px;
    background-color: white;
    border-radius: 50em;
    animation: reverse mouse_scroll 2s infinite;
  }

@keyframes mouse_scroll
  0%
    transform: translateY(-7.5px);
    opacity: 0;
  40%
    transform: translateY(-7.5px);
    opacity: 1;
  70%
    transform translateY(7.5px)
    opacity 1
  100%
    transform translateY(7.5px)
    opacity 0

.pointer-mouse-down
  width 0.5em
  height 0.5em
  background-color white
  border-radius 100%